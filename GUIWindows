package raspberryPi_GUI;

import org.eclipse.swt.widgets.Display;
import org.eclipse.swt.widgets.Shell;
import org.eclipse.swt.widgets.Label;
import org.eclipse.swt.SWT;
import org.eclipse.swt.widgets.Button;

public class confirmLockScreen {

	protected Shell shell;

	/**
	 * Launch the application.
	 * @param args
	 */
	public static void main(String[] args) {
		try {
			confirmLockScreen window = new confirmLockScreen();
			window.open();
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

	/**
	 * Open the window.
	 */
	public void open() {
		Display display = Display.getDefault();
		createContents();
		shell.open();
		shell.layout();
		while (!shell.isDisposed()) {
			if (!display.readAndDispatch()) {
				display.sleep();
			}
		}
	}

	/**
	 * Create contents of the window.
	 */
	protected void createContents() {
		shell = new Shell();
		shell.setSize(535, 370);
		shell.setText("SWT Application");
		
		Label lblAreYouSure = new Label(shell, SWT.NONE);
		lblAreYouSure.setBounds(104, 66, 385, 21);
		lblAreYouSure.setText("Are you sure you want to lock the screen?");
		
		Button btnNewButton = new Button(shell, SWT.NONE);
		btnNewButton.setBounds(78, 147, 124, 65);
		btnNewButton.setText("Yes");
		
		Button btnNo = new Button(shell, SWT.NONE);
		btnNo.setText("No");
		btnNo.setBounds(277, 147, 124, 65);

	}

}
